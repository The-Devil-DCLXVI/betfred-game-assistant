{
  "manifest_version": 3,
  "name": "Betfred Game Assistant",
  "version": "1.0.3",
  "description": "Your personal assistant for discovering, tracking, and managing Betfred games. Features advanced filters, favorites, statistics, import/export tools, and a comprehensive game database to enhance your gaming experience.",
  "author": "The Devil",
  "content_scripts": [
    {
    "matches": [
      "*://www.betfred.com/*",
      "*://betfred.com/*",
      "*://games.betfred.com/*",
      "*://casino.betfred.com/*",
      "*://vegas.betfred.com/*",
      "*://*.betfred.com/*"
    ],
      "js": ["main.bundle.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://www.betfred.com/*",
    "*://betfred.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_title": "Betfred Game Assistant",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "youtube.png",
        "pnuk.png",
        "icon16.png",
        "betfred_scan_data.json"
      ],
      "matches": [
        "*://www.betfred.com/*",
        "*://betfred.com/*",
        "*://games.betfred.com/*",
        "*://casino.betfred.com/*",
        "*://vegas.betfred.com/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "betfred-game-assistant@yourdomain.com",
      "strict_min_version": "109.0"
    }
  }
}

